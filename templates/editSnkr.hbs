<div class="small-container">
	<h1>Sneakers for Sale</h1>

	<div>
		<a href="#/for-sale" class="btn btn-primary">Back</a>
	</div>
</div>

<div class="small-container margin-top-20">
	<form id="edit-snkr-form">
		<div class="well">
			<div class="bold">
				Brand
			</div>
			<div class="margin-top-20">
				<input id="brand" type="text" class="form-control" value="{{ brand }}" />
			</div>
			<div class="bold margin-top-20">
				Silhouette
			</div>
			<div class="margin-top-20">
				<input id="silhouette" type="text" class="form-control" value="{{ silhouette }}" />
			</div>
			<div class="bold margin-top-20">
				Colorway
			</div>
			<div class="margin-top-20">
				<input id="colorway" type="text" class="form-control" value="{{ colorway }}" />
			</div>
			<div class="bold margin-top-20">
				Size
			</div>
			<div class="margin-top-20">
				<input id="size" type="text" class="form-control" value="{{ size }}" />
			</div>
            <div class="bold margin-top-20">
				Price
			</div>
			<div class="margin-top-20">
				<input id="price" type="text" class="form-control" value="{{ price }}" />
			</div>
			<div class="margin-top-20 txt-right">
				<button type="submit" class="btn btn-primary">Edit Sneaker</button>
				<button id="mark-sold-button" type="button" class="btn btn-danger">Mark As Sold</button>
			</div>
		</div>
	</form>
</div>